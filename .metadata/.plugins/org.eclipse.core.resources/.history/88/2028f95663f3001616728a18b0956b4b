#include "MyComplex.hpp"

MyComplex::MyComplex(double R, double I)
{
    Im = I;
    Re = R;
}

MyComplex::MyComplex(double R)
{
    Im = 0.0f;
    Re = R;
}

MyComplex::MyComplex()
{
    Im = 0.0f;
    Re = 0.0f;
}

MyComplex::~MyComplex()
{

}

float MyComplex::GetIm()
{
    return Im;
}

float MyComplex::GetRe()
{
    return Re;
}

MyComplex::MyComplex(const MyComplex &c)
{
    this->Re=c.Re;
    this->Im=c.Im;
}

MyComplex MyComplex::operator + (MyComplex c)
{
    MyComplex Result;
    Result.Im = Im + c.Im;
    Result.Re = Re + c.Re;
    return Result;
}

MyComplex MyComplex::operator = (MyComplex c)
{
    Re = c.Re;
    Im = c.Im;
}

MyComplex MyComplex::Add(MyComplex a, MyComplex b)
{
    MyComplex Result;
    Result.Im = a.Im + b.Im;
    Result.Re = a.Re + b.Re;
    return Result;
}


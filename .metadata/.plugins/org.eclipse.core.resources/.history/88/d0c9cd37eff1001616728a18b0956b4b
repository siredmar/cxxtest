/*******************************************************************************
* SetNormierungAC
*
* Funktion zum Normieren der erfassten AC-Messwerte
*******************************************************************************/
void SetNormierungAC(struct MESSWERTE_STRUCT *ADC_werte ,struct MESSWERTE_STRUCT *normierte_werte);
/******************************************************************************/



/*******************************************************************************
* SetNormierungDC1
*
* Funktion zum Normieren des erfassten DC-Messwertes
*******************************************************************************/
u16_t SetNormierungDC1(u16_t dc1);
/******************************************************************************/


/*******************************************************************************
* SetNormierungDC2
*
* Funktion zum Normieren des erfassten DC-Messwertes
*******************************************************************************/
u16_t SetNormierungDC2(u16_t dc2);
/******************************************************************************/


/*******************************************************************************
* SetNormierungDC3
*
* Funktion zum Normieren des erfassten DC-Messwertes
*******************************************************************************/
u16_t SetNormierungDC3(u16_t dc3);
/******************************************************************************/



/*******************************************************************************
* SetNormierungswerte();
*
* Funktion zum Normieren des erfassten DC-Messwertes
*******************************************************************************/
u16_t SetNormierungswerte();
